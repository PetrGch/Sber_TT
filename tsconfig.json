{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "experimentalDecorators": true,
      "types": ["jest"],
      "typeRoots": ["./types", "./node_modules/@types"],
      "esModuleInterop": true,
    },
    "include": [
      "./src"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }